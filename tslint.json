{
    "rulesDirectory": [ "node_modules/tslint-eslint-rules/dist/rules" ],
    "rules": {
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            "error",
            4
        ],
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "no-var-keyword": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace",
            "check-catch",
            "check-finally",
            "check-else"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": true,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-module",
            "check-typecast"
        ],
        "curly": true,
        "interface-name": [ true, "always-prefix" ],
        "max-file-line-count": [ true, 300 ],
        "no-default-export": true,
        "max-line-length": [ true, 120 ],
        "object-curly-spacing": [ "error", "always" ]
    }
}
